{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es6",
    "lib": ["es6"],
    "module": "umd", // commonjs
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "typedocOptions": {
    "mode": "modules",
    "name": "API Reference Docs",
    "includeVersion": false,
    "excludePrivate": true,
    "stripInternal": true,
    "disableSources": false,
    "hideGenerator": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
