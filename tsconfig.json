{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es6",
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "typedocOptions": {
    "mode": "modules",
    "name": "Reference Docs",
    "includeVersion": false,
    "excludePrivate": true,
    "stripInternal": true,
    "disableSources": false,
    "hideGenerator": true,
    "links": [
      {
        "label": "GitHub Project",
        "url": "https://github.com/distributhor/paygate-sdk"
      },
      {
        "label": "Documentation",
        "url": "https://distributhor.github.io/paygate-sdk/"
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
